{
    "name": "robertogriel/replicator",
    "description": "",
    "homepage": "https://github.com/robertogriel/replicator",
    "license": "MIT",
    "authors": [
        {
            "name": "Roberto Griel Filho",
            "email": "roberto@griel.com.br"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-sockets": "*",
        "doctrine/collections": "^2.1",
        "doctrine/dbal": "^3.8",
        "illuminate/console": "^11.29",
        "illuminate/contracts": "^10.0||^11.0",
        "illuminate/support": "^11.29",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/event-dispatcher": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.19",
        "mockery/mockery": "^1.6",
        "monolog/monolog": "^3.5",
        "orchestra/testbench": "^9.5",
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-drift": "^2.6",
        "pestphp/pest-plugin-laravel": "^2.4",
        "phpoption/phpoption": "^1.9",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "symplify/easy-coding-standard": "^12.1"
    },
    "autoload": {
        "psr-4": {
            "robertogriel\\Replicator\\": "src/Replicator/",
            "MySQLReplication\\": "src/MySQLReplication/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\MySQLReplication\\": "Tests/MySQLReplication",
            "Tests\\Replicator\\": "Tests/Replicator"
        }
      },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "robertogriel\\Replicator\\ReplicatorServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
